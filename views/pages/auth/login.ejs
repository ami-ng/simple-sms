<%- contentFor("body") %>

<div class="container login-container">
    <div class="row">
      <div class="col-md-12">
        <form class="login-form" action="/api/register">
          <h4 class="text-center mb-4">Login</h4>
          <div class="form-group form-row mt-4">
            <input type="email" class="form-control" placeholder="Email Address" required>
          </div>
          <div class="form-group form-row mt-4">
            <input type="password" class="form-control" placeholder="Password" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4">Login</button>
        </form>
        <h6 class="align-items-center text-center text-decoration-none"> Click here to <a href="/user/register">Sign up</a></h6>
        
        <h6 class="align-items-center text-center text-decoration-none"> Forgot yor password? <a href="/user/reset-password">Reset it here.</a></h6>
      </div>
    </div>
  </div>
<%- contentFor("scripts") %>
